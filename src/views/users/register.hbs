<div class="registration">
    <form action="/users/registration" method="post">
        {{#if user}}
            <h2>{{{ icon "fa-users" }}} {{ __.users.completeRegister }}</h2>

            <p class="avatar">
                <img src="{{ user.avatar }}" alt="{{ user.username }}" />

                <span class="welcome">
                    {{ __.users.hello }},
                    <strong>{{#is user.network "twitter"}}@{{/is}}{{ user.username }}</strong>!
                </span>
            </p>

            {{{ label for = "user" text = __.users.username }}}

            <p>
                {{{ input
                    id = "user"
                    name = "username"
                    maxlength = "20"
                    value = user.username
                    required = true
                }}}
            </p>

            {{{ label for = "email" text = __.users.email }}}

            <p>
                {{{ input
                    id = "email"
                    type = "email"
                    name = "email"
                    maxlength = "80"
                    placeholder = __.users.example.email
                    pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"
                    required = true
                }}}
            </p>

            <p>
                {{{ checkbox id = "suscribe" name = "subscribed" checked = "true" }}}

                {{{ label
                    for = "suscribe"
                    class = "checkboxLabel"
                    text = __.users.subscribe
                }}}
            </p>

            <p>
                {{{ input
                    class = "btn btn-danger submit"
                    type  = "submit"
                    name  = "register"
                    value = __.menu.register.text
                }}}
            </p>

            {{{ hidden name = "avatar"    value = user.avatar    }}}
            {{{ hidden name = "network"   value = user.network   }}}
            {{{ hidden name = "networkId" value = user.networkId }}}
        {{else}}
            <h2>{{ __.users.newUser }}</h2>
            <p>Nuevo usuario</p>
        {{/if}}

        {{{ token securityToken }}}
    </form>
</div>
